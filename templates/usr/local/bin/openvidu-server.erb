#!/bin/sh
SERVICE_NAME=openviduserver
PATH_TO_JAR=/opt/openvidu-server/openvidu-server-<%= @openvidu_version %>.jar
PID_PATH_NAME=/tmp/openviduserver-pid
OPCOES="-Dopenvidu.secret=MY_SECRET \
	-Dopenvidu.publicurl=https://<%= @public_ip %>:<%= @public_port %>/ \
	-Dopenvidu.recording=true \
	-Dopenvidu.recording.path=/opt/openvidu/recordings
	-Dopenvidu.recording.autostop-timeout=0"
case $1 in
start)
       echo "Starting $SERVICE_NAME ..."
  if [ ! -f $PID_PATH_NAME ]; then
       cd /opt/openvidu-server/
       #nohup java -jar ${OPCOES} $PATH_TO_JAR /tmp 2>> /var/log/openvidu.log  >>/var/log/openvidu.log &
       nohup java -jar ${OPCOES} $PATH_TO_JAR >> /var/log/openvidu.log 2>> /var/log/openvidu.log &
       exit
                   echo $! > $PID_PATH_NAME
       echo "$SERVICE_NAME started ..."
  else
       echo "$SERVICE_NAME is already running ..."
  fi
  :
;;
stop)
  if [ -f $PID_PATH_NAME ]; then
         PID=$(cat $PID_PATH_NAME);
         echo "$SERVICE_NAME stoping ..."
         kill $PID;
         echo "$SERVICE_NAME stopped ..."
         rm $PID_PATH_NAME
  else
         echo "$SERVICE_NAME is not running ..."
  fi
;;
restart)
  if [ -f $PID_PATH_NAME ]; then
      PID=$(cat $PID_PATH_NAME);
      echo "$SERVICE_NAME stopping ...";
      kill $PID;
      echo "$SERVICE_NAME stopped ...";
      rm $PID_PATH_NAME
      echo "$SERVICE_NAME starting ..."
      nohup java -jar $PATH_TO_JAR /tmp 2>> /dev/null >> /dev/null &
      echo $! > $PID_PATH_NAME
      echo "$SERVICE_NAME started ..."
  else
      echo "$SERVICE_NAME is not running ..."
     fi     ;;
 esac
